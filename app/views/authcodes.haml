#authcodes-modal.modal.fade{role: "dialog", tabindex: "-1"}
  .modal-dialog{role: "document"}
    .modal-content
      .modal-header
        %button.close{"aria-label": "Close", "data-dismiss": "modal", type: "button"}
          %span{"aria-hidden": "true"} Ã—
        %h4.modal-title
          = I18n.t('opendoor.properties')
      .modal-body#authcodes-body
        - if @auth_codes.size == 0
          = I18n.t('opendoor.no_auth_codes')
        - @auth_codes.each do |auth|
          = partial('authcode', locals: { auth: auth })
      .modal-footer
        %button.btn.btn-default{"data-dismiss": "modal", type: "button"}
          = I18n.t('opendoor.close')
        .pull-left
          .form-inline
            .form-group#name-missing
              %button.btn.btn-primary#create-auth-code{type: "button"}
                = I18n.t('opendoor.create_auth_code')
              &nbsp;
              %input.form-control#auth-name{type: "text", placeholder: 'Name'}
